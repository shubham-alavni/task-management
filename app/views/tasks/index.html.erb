<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold mb-0">My Tasks</h1>
    <%= link_to "New Task", new_task_path, class: "btn btn-primary btn-lg" %>
  </div>

  <% if @tasks.any? %>
    <div class="list-group shadow-sm rounded">
      <% @tasks.each do |task| %>
        <div class="list-group-item d-flex justify-content-between align-items-center py-3 <%= 'bg-light' if task.completed %>">
          <div class="flex-grow-1">
            <h5 class="mb-2 <%= 'text-decoration-line-through text-muted' if task.completed %>">
              <%= task.title %>
              <% if task.completed %>
                <span class="badge bg-success ms-2">Completed</span>
              <% elsif task.due_date && task.due_date < Date.today %>
                <span class="badge bg-danger ms-2">Overdue</span>
              <% elsif task.due_date && task.due_date <= Date.today + 2 %>
                <span class="badge bg-warning text-dark ms-2">Due Soon</span>
              <% end %>
            </h5>
            <p class="mb-2 text-secondary"><%= truncate(task.description, length: 180) %></p>
            <div class="small text-muted">
              <i class="bi bi-calendar-plus"></i> Created <%= time_ago_in_words(task.created_at) %> ago
              <% if task.due_date %>
                â€¢ <i class="bi bi-calendar-event"></i> Due <%= task.due_date.strftime("%b %d, %Y") %>
              <% end %>
            </div>
          </div>

          <div class="ms-4 text-end">
            <%= form_with url: mark_complete_task_path(task), method: :patch, local: true do |f| %>
              <% if task.completed %>
                <%= hidden_field_tag :completed, false %>
                <%= f.submit "Mark Incomplete", class: "btn btn-sm btn-outline-secondary mb-2 w-100" %>
              <% else %>
                <%= hidden_field_tag :completed, true %>
                <%= f.submit "Mark Complete", class: "btn btn-sm btn-success mb-2 w-100" %>
              <% end %>
            <% end %>
            <div class="d-flex gap-2">
              <%= link_to "Edit", edit_task_path(task), class: "btn btn-sm btn-outline-primary" %>
              <%= link_to "Delete", task_path(task), data: { turbo_method: :delete, turbo_confirm: "Delete task?" }, class: "btn btn-sm btn-outline-danger" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info text-center shadow-sm rounded">
      <i class="bi bi-emoji-smile"></i>
      You have no tasks.
      <%= link_to "Create your first task", new_task_path, class: "btn btn-link fw-bold" %>
    </div>
  <% end %>
</div>