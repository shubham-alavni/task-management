<h1 class="mb-4 text-center">Create Your Account</h1>

<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5">
    <div class="card shadow-sm">
      <div class="card-body">
        <%= form_with url: signup_path, local: true do |f| %>
          <div class="mb-3">
            <%= f.label :first_name, class: "form-label" %>
            <%= f.text_field :first_name, name: "user[first_name]", class: "form-control", required: true, placeholder: "Enter your first name" %>
          </div>

          <div class="mb-3">
            <%= f.label :last_name, class: "form-label" %>
            <%= f.text_field :last_name, name: "user[last_name]", class: "form-control", required: true, placeholder: "Enter your last name" %>
          </div>

          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, name: "user[email]", class: "form-control", required: true, placeholder: "you@example.com" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, name: "user[password]", class: "form-control", required: true, placeholder: "Create a password" %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, "Confirm password", class: "form-label" %>
            <%= f.password_field :password_confirmation, name: "user[password_confirmation]", class: "form-control", required: true, placeholder: "Repeat your password" %>
          </div>

          <div class="d-grid gap-2">
            <%= f.submit "Sign Up", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
        <hr>
        <div class="text-center">
          <small>
            Already have an account?
            <a href="<%= login_path %>">Log in</a>
          </small>
        </div>
      </div>
    </div>
  </div>
</